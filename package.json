{
  "name": "supernal-linkedin-formatter",
  "version": "1.0.2",
  "description": "Framework-agnostic Markdown to LinkedIn formatter with pure algorithms, React hooks, and copy-paste widgets",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "require": "./dist/react/index.js",
      "default": "./dist/react/index.js"
    },
    "./widgets": {
      "types": "./dist/widgets/index.d.ts",
      "require": "./dist/widgets/index.js",
      "default": "./dist/widgets/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node test.js",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supernalintelligence/linkedin-formatter.git"
  },
  "homepage": "https://supernal.ai/tools/linkedin-formatter",
  "bugs": {
    "url": "https://github.com/supernalintelligence/linkedin-formatter/issues"
  },
  "keywords": [
    "linkedin",
    "markdown",
    "formatter",
    "unicode",
    "social-media",
    "framework-agnostic",
    "react",
    "nextjs",
    "text-formatting",
    "social-post"
  ],
  "author": "Supernal Intelligence",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/markdown-it": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "jest": "^29.5.0",
    "react": "^18.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "markdown-it": "^14.0.0"
  }
}
